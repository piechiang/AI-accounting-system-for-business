{
  "schedule_info": {
    "schedule_name": "Schedule L",
    "description": "Balance Sheets per Books",
    "form_reference": "1120",
    "columns": ["beginning_of_year", "end_of_year"],
    "column_mapping": {
      "col_b": "beginning_of_year_book_value",
      "col_c": "beginning_of_year_market_value", 
      "col_d": "end_of_year_book_value",
      "col_e": "end_of_year_market_value"
    }
  },

  "assets": {
    "line_1": {
      "description": "Cash",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["cash", "petty_cash", "cash_in_banks"],
      "coa_codes": ["1010", "1015", "1020"]
    },
    "line_2a": {
      "description": "Trade notes and accounts receivable",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accounts_receivable", "notes_receivable_trade"],
      "coa_codes": ["1100", "1105"]
    },
    "line_2b": {
      "description": "Less allowance for bad debts",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["allowance_doubtful_accounts"],
      "coa_codes": ["1110"]
    },
    "line_3": {
      "description": "Inventories",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["inventory", "raw_materials", "finished_goods", "work_in_process"],
      "coa_codes": ["1200", "1210", "1220", "1230"]
    },
    "line_4": {
      "description": "U.S. government obligations",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["us_government_securities"],
      "coa_codes": ["1310"]
    },
    "line_5": {
      "description": "Tax-exempt securities",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["tax_exempt_securities"],
      "coa_codes": ["1315"]
    },
    "line_6": {
      "description": "Other current assets",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["prepaid_expenses", "other_current_assets"],
      "coa_codes": ["1300", "1350", "1390"]
    },
    "line_7": {
      "description": "Loans to shareholders",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["loans_to_shareholders"],
      "coa_codes": ["1510"]
    },
    "line_8": {
      "description": "Mortgage and real estate loans",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["mortgage_loans_receivable"],
      "coa_codes": ["1520"]
    },
    "line_9": {
      "description": "Other investments",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["other_investments"],
      "coa_codes": ["1530", "1540"]
    },
    "line_10a": {
      "description": "Buildings and other depreciable assets",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["buildings", "equipment", "furniture_fixtures"],
      "coa_codes": ["1600", "1610", "1620"]
    },
    "line_10b": {
      "description": "Less accumulated depreciation",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accumulated_depreciation"],
      "coa_codes": ["1650", "1660", "1670"]
    },
    "line_11": {
      "description": "Depletable assets",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["depletable_assets"],
      "coa_codes": ["1700"]
    },
    "line_12": {
      "description": "Less accumulated depletion",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accumulated_depletion"],
      "coa_codes": ["1710"]
    },
    "line_13": {
      "description": "Land (net of any amortization)",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["land"],
      "coa_codes": ["1800"]
    },
    "line_14": {
      "description": "Intangible assets (amortizable only)",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["intangible_assets"],
      "coa_codes": ["1900"]
    },
    "line_15": {
      "description": "Less accumulated amortization",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accumulated_amortization"],
      "coa_codes": ["1910"]
    },
    "line_16": {
      "description": "Other assets",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["other_assets"],
      "coa_codes": ["1950", "1990"]
    },
    "line_17": {
      "description": "Total assets",
      "validation": {
        "type": "currency",
        "min": 0,
        "calculation": "sum(line_1, line_2a - line_2b, line_3, line_4, line_5, line_6, line_7, line_8, line_9, line_10a - line_10b, line_11 - line_12, line_13, line_14 - line_15, line_16)"
      },
      "auto_calculate": true
    }
  },

  "liabilities_and_equity": {
    "line_18": {
      "description": "Accounts payable",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accounts_payable", "trade_payables"],
      "coa_codes": ["2000", "2010"]
    },
    "line_19": {
      "description": "Mortgages, notes, bonds payable in less than 1 year",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["current_portion_long_term_debt", "short_term_debt"],
      "coa_codes": ["2100", "2110"]
    },
    "line_20": {
      "description": "Other current liabilities",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["accrued_expenses", "other_current_liabilities"],
      "coa_codes": ["2200", "2210", "2220"]
    },
    "line_21": {
      "description": "Loans from shareholders",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["loans_from_shareholders"],
      "coa_codes": ["2300"]
    },
    "line_22": {
      "description": "Mortgages, notes, bonds payable in 1 year or more",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["long_term_debt", "mortgages_payable"],
      "coa_codes": ["2400", "2410"]
    },
    "line_23": {
      "description": "Other liabilities",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["other_liabilities"],
      "coa_codes": ["2500", "2510"]
    },
    "line_24": {
      "description": "Capital stock: Preferred stock",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["preferred_stock"],
      "coa_codes": ["3100"]
    },
    "line_25": {
      "description": "Capital stock: Common stock",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["common_stock"],
      "coa_codes": ["3200"]
    },
    "line_26": {
      "description": "Additional paid-in capital",
      "validation": {
        "type": "currency",
        "can_be_negative": true
      },
      "tb_mapping": ["additional_paid_in_capital"],
      "coa_codes": ["3300"]
    },
    "line_27": {
      "description": "Retained earnings—Appropriated",
      "validation": {
        "type": "currency",
        "can_be_negative": true
      },
      "tb_mapping": ["retained_earnings_appropriated"],
      "coa_codes": ["3410"]
    },
    "line_28": {
      "description": "Retained earnings—Unappropriated",
      "validation": {
        "type": "currency",
        "can_be_negative": true
      },
      "tb_mapping": ["retained_earnings"],
      "coa_codes": ["3400"],
      "cross_reference": "schedule_m2.line_7"
    },
    "line_29": {
      "description": "Adjustments to shareholders' equity",
      "validation": {
        "type": "currency",
        "can_be_negative": true
      },
      "tb_mapping": ["other_comprehensive_income", "treasury_stock"],
      "coa_codes": ["3500", "3600"]
    },
    "line_30": {
      "description": "Less cost of treasury stock",
      "validation": {
        "type": "currency",
        "min": 0
      },
      "tb_mapping": ["treasury_stock"],
      "coa_codes": ["3700"]
    },
    "line_31": {
      "description": "Total liabilities and shareholders' equity",
      "validation": {
        "type": "currency",
        "calculation": "sum(line_18, line_19, line_20, line_21, line_22, line_23, line_24, line_25, line_26, line_27, line_28, line_29) - line_30",
        "must_equal": "line_17"
      },
      "auto_calculate": true
    }
  },

  "validation_rules": {
    "balance_sheet_balance": {
      "rule": "assets_equal_liabilities_equity",
      "description": "Total assets (line 17) must equal total liabilities and equity (line 31)",
      "condition": "line_17 == line_31",
      "error_message": "Balance sheet does not balance. Assets must equal Liabilities + Equity"
    },
    "net_receivables": {
      "rule": "receivables_net_positive",
      "description": "Net receivables (2a - 2b) should not be negative",
      "condition": "line_2a >= line_2b",
      "warning_message": "Allowance for bad debts exceeds gross receivables"
    },
    "net_depreciable_assets": {
      "rule": "net_depreciable_assets_positive",
      "description": "Net depreciable assets should not be negative",
      "condition": "line_10a >= line_10b",
      "warning_message": "Accumulated depreciation exceeds cost of depreciable assets"
    },
    "retained_earnings_tie": {
      "rule": "retained_earnings_schedule_m2_tie",
      "description": "Schedule L retained earnings should tie to Schedule M-2",
      "condition": "line_28_col_d == schedule_m2.line_7",
      "error_message": "Schedule L retained earnings does not tie to Schedule M-2 ending balance"
    }
  }
}